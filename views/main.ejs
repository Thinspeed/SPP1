<!DOCTYPE html>
<html>
        <%- include('../static/html/head.html'); -%>
    <body>
        <div class="form-container">
            <form class="add-form" action="" method="post">
                <input class="textbox" type="text" name="name" placeholder="name">
                <input class="textbox" type="date" name="date" placeholder="time">
                <input class="button" type="submit" value="add">
            </form>
        </div> 
        <div class="table-container">
            <table class="table">
                <thead>
                    <tr>
                        <th>
                            <p>id</p>
                        </th>
                        <th>
                            <p>name</p>
                        </th>
                        <th>
                            <p>time</p>
                        </th>
                        <th>
                            <p>status</p>
                        </th>
                    </tr>
                </thead>
                <% for(let i = 0; i < a.length; i++) { %>
                    <tr>
                        <td>
                            <%- a[i].Id %>
                        </td>
                        <td>
                            <%- a[i].Name %>
                        </td>
                        <td>
                            <%- `${a[i].Date.getDate()}.${a[i].Date.getMonth()}.${a[i].Date.getFullYear()}` %>
                        </td>
                        <td>
                            <%- a[i].Status %>
                        </td>
                    </tr>
                <%}%>
    
            </table> 
        </div>
    </body>
</html>