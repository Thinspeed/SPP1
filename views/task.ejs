<% let form = '<div class="task-actions"><form action="" method="post"><button value="done" name="status">done</button><button value="canceled" name="status">cancel</button></form></div>'%>

<!DOCTYPE html>
<html>
    <%- include('../static/html/head.html'); -%>
    <body>
        <div class="task">
            <div class="task-content">
                <div class="task-title">
                    <h1>
                        <%- `#${task.Id} - ${task.Name}` %>
                    </h1>
                </div>
                <div class="task-body">
                    <p><%- `Date: ${task.Date.getDate()}.${task.Date.getMonth()}.${task.Date.getFullYear()}` %></p>
                    <p><%- `Staus: ${task.Status}` %></p>
                </div>
                <% if (task.Status == 'created') { %>
                    <%- form %>
                <% }%>
            </div>
        </div>
    </body>
</html>